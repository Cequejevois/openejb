<project default="copy-resources">
  <target name="init"/>
  <target name="copy-resources" depends="init">
    <copy todir="target/classes/META-INF" filtering="false">
      <fileset dir="META-INF" includes="MANIFEST.MF" excludes="**/*.java"/>
    </copy>
    <copy todir="target/classes/buildfiles" filtering="false">
      <fileset dir="buildfiles" includes="*" excludes="**/*.java"/>
    </copy>
    <copy todir="target/classes/icons" filtering="false">
      <fileset dir="icons" includes="**/*" excludes="**/*.java"/>
    </copy>
    <copy todir="target/classes/servers" filtering="false">
      <fileset dir="servers" includes="*" excludes="**/*.java"/>
    </copy>
  </target>
</project>